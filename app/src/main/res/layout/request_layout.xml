<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:padding="16dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/blood_group_requestList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red_dark"
            tools:text="O positive" />

        <TextView
            android:id="@+id/patient_name_request_lists"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="mazid islam" />


        <TextView
            android:id="@+id/requested_by_reqList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Requested By : Saajan" />

        <TextView
            android:id="@+id/contact_reqList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            tools:text="123456789" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:id="@+id/call_requestee"
        android:textColor="@color/white"
        android:background="@drawable/button_rounded"
        android:text="call"/>


</LinearLayout>